# Custom Fleio Environment Variables
# Copy this file to .env and configure your settings

# Fleio Configuration
FLEIO_SITE_URL=https://your-domain.com
FLEIO_SECRET_KEY=your-secret-key-change-in-production
FLEIO_DEBUG=false

# Database Configuration
FLEIO_DB_HOST=db
FLEIO_DB_PORT=5432
FLEIO_DB_NAME=fleio
FLEIO_DB_USER=fleio
FLEIO_DB_PASSWORD=your-db-password

# Redis Configuration
FLEIO_REDIS_HOST=redis
FLEIO_REDIS_PORT=6379
FLEIO_REDIS_PASSWORD=your-redis-password

# NOWPayments Configuration
FLEIO_NOWPAYMENTS_API_KEY=your-nowpayments-api-key
FLEIO_NOWPAYMENTS_IPN_SECRET=your-ipn-secret
FLEIO_NOWPAYMENTS_SANDBOX=false

# S3 Backup Configuration
FLEIO_S3_BUCKET=your-backup-bucket
FLEIO_S3_REGION=us-east-1
FLEIO_S3_ENDPOINT_URL=https://s3.your-provider.com
FLEIO_S3_ACCESS_KEY=your-s3-access-key
FLEIO_S3_SECRET_KEY=your-s3-secret-key

# Email Configuration
FLEIO_EMAIL_HOST=smtp.gmail.com
FLEIO_EMAIL_PORT=587
FLEIO_EMAIL_USER=your-email@gmail.com
FLEIO_EMAIL_PASSWORD=your-email-password
FLEIO_EMAIL_USE_TLS=true

# Security Configuration
FLEIO_PASSWORD_MIN_LENGTH=8
FLEIO_SESSION_TIMEOUT=3600
FLEIO_MAX_LOGIN_ATTEMPTS=5
FLEIO_ENABLE_TWO_FACTOR=true

# Monitoring Configuration
FLEIO_MONITORING_ENABLED=true
FLEIO_ALERT_EMAIL=admin@your-domain.com
FLEIO_UPTIME_CHECK_INTERVAL=60
