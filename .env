# Custom Fleio Environment Variables
# Copy this file to .env and configure your settings

# Fleio Configuration
FLEIO_SITE_URL=https://my.omenhost.com
FLEIO_SECRET_KEY=REDACTED
FLEIO_DEBUG=false

# Database Configuration
FLEIO_DB_HOST=db
FLEIO_DB_PORT=3306
FLEIO_DB_NAME=fleio
FLEIO_DB_USER=fleio
FLEIO_DB_PASSWORD=REDACTED

# Redis Configuration
FLEIO_REDIS_HOST=redis
FLEIO_REDIS_PORT=6379
FLEIO_REDIS_PASSWORD=

# NOWPayments Configuration
FLEIO_NOWPAYMENTS_API_KEY=REDACTED
FLEIO_NOWPAYMENTS_IPN_SECRET=REDACTED
FLEIO_NOWPAYMENTS_SANDBOX=false

# S3 Backup Configuration
FLEIO_S3_BUCKET=fleio-backups
FLEIO_S3_REGION=eu-central-1
FLEIO_S3_ACCESS_KEY=REDACTED
FLEIO_S3_SECRET_KEY=REDACTED

# Email Configuration
FLEIO_EMAIL_HOST=mail.omenhost.com
FLEIO_EMAIL_PORT=587
FLEIO_EMAIL_USER=noreply@omenhost.com
FLEIO_EMAIL_PASSWORD=REDACTED
FLEIO_EMAIL_USE_TLS=true

# Security Configuration
FLEIO_PASSWORD_MIN_LENGTH=8
FLEIO_SESSION_TIMEOUT=3600
FLEIO_MAX_LOGIN_ATTEMPTS=5
FLEIO_ENABLE_TWO_FACTOR=true

# Monitoring Configuration
FLEIO_MONITORING_ENABLED=true
FLEIO_ALERT_EMAIL=hello@omenhost.com
FLEIO_UPTIME_CHECK_INTERVAL=60
